                  <h2 class="mb-4">Login</h2>
                  <hr class="w-50 mx-auto">
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <% if flash[:alert] %>
                      <div class="alert alert-danger mb-4">
                        <%= flash[:alert] %>
                      </div>
