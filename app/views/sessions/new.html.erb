      <div id="main">
        <h1>Login</h1>

        <% if flash[:alert] %>
          <p class="alert"><%= flash[:alert] %></p>
        <% end %>

        <%= form_with url: login_path, method: :post, local: true do |f| %>
          <div class="field">
            <%= label_tag :email, "UsuÃ¡rio (email)" %><br>
            <%= text_field_tag :email, nil, required: true %>
          </div>

          <div class="field">
            <%= label_tag :password, "Senha" %><br>
            <%= password_field_tag :password, nil, required: true %>
          </div>

          <div class="actions">
            <%= submit_tag "Entrar" %>
          </div>
        <% end %>

        <div class="forgot-password">
          <%= link_to "Esqueceu a senha?", "#" %>
        </div>
      </div>
