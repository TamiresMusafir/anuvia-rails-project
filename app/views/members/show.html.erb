    <div id="main">
      
      <!-- Breadcumbs start -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <div class="container d-flex p-0">
            <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
            <li class="breadcrumb-item"><%= link_to "Members", members_path %></li>
            <li class="breadcrumb-item active" aria-current="page"><%= @member.name %></li>
          </div>
        </ol>
      </nav>
      <!-- Breadcumbs end -->
      <!-- Team details start -->
      <section class="team-details-section">
        <div class="container">
          <div class="row">
            <div class="col-sm-12 col-lg-4">
              <div class="team-details-photo imagebox team-details-info">
                <% if @member.image.attached? %>
                  <%= image_tag @member.image, class: "img-fluid rounded shadow", width: 300 %>
                <% end %>
              </div>
            </div>
            <div class="col-sm-12 col-lg-8">
              <div class="team-details-info">
                <h2><%= @member.name %></h2>
                <hr>
                <p><%= @member.description %></p>
                <hr>
                <div class="team-details-contact">
                  <a href="#"><i class="fa-xl fa-brands fa-facebook"></i></a>
                  <a href="#"><i class="fa-xl fa-brands fa-twitter"></i></a>
                  <a href="#"><i class="fa-xl fa-brands fa-instagram"></i></a>
                  <a href="#"><i class="fa-xl fa-brands fa-linkedin"></i></a>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body text-start pt-3">
            <%= link_to "Back to members", members_path, class: "btn btn-outline-primary", role: "button" %>
            <%= link_to "Edit #{@member.name}", edit_member_path(@member), class: "btn btn-outline-primary", role: "button" %>
            <%= button_to "Delete #{@member.name}", @member, method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "btn btn-danger mt-2", role: "button" %>
          </div>
        </div>
      </section>
      <!-- Team details end -->
    </div>
