    <div id="main">
    
      <!-- Blog details start -->
      <div class="dashboard-section">
				<div class="dashboard-container">
          <div class="row">
            <div class="col-lg-12">
              <% if @post.image.attached? %>
                <%= image_tag @post.image, class: "img-fluid blog-details-img img-thumbnail rounded", width: 300 %>
              <% end %>
            </div>
            <div class="col-lg-12">
              <div class="blog-details-title">
                <h1><%= @post.title %></h1>
                <h4><%= @post.headline %></h4>
              </div>
              <div class="blog-list">
                <ul class="d-flex align-items-center list-unstyled">
                  <li class="me-3" style="color: #6c757d;">
                    <i class="fa-regular fa-user"></i>
                    <%= @post.user.name %>
                  </li>
                  <li class="me-3" style="color: #6c757d;">
                    <i class="fa-regular fa-clock"></i>
                    <%= @post.created_at.strftime("%d/%m/%Y") %>
                  </li>
                  <!-- <li class="me-3">
                    <i class="fa-regular fa-comment"></i>
                    <a href="">5 Comments</a>
                  </li> -->
                </ul>
              </div>
              <div class="blog-details-body">
                <p><%= simple_format(@post.description) %></p>
              </div>
            </div>
          </div>
          <div class="card-body text-start pt-3">
            <%= link_to "Back to Posts", admin_posts_path, class: "btn btn-outline-primary mb-1", role: "button" %>
            <%= link_to "Edit this Post", edit_admin_post_path(@post), class: "btn btn-outline-primary mb-1", role: "button" %>
            <%= link_to "View this Post Page", @post, class: "btn btn-outline-primary mb-1", role: "button" %>
            <%= button_to "Delete This Post", admin_post_path(@post), method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "btn btn-danger mt-2 mb-1", role: "button" %>
          </div>
        </div>
      </div>