			<div id="main">
				<div class="dashboard-section">
					<div class="dashboard-container">
						
						<div class="dashboard-title">
							<h2>Posts</h2>
						</div>

						<div class="dashboard-body">
							<%= link_to "Create New Post", new_admin_post_path, class: "btn btn-outline-primary mb-3" %>
							<% @posts.each do |post| %>
								<div class="dashboard-list d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
									
									<span><%= post.title %></span>

									<div class="dashboard-actions">
										<%= link_to admin_post_path(post), class: "btn btn-sm btn-outline-primary m-1" do %>
											<i class="fa-solid fa-eye"></i> Visualizar
										<% end %>

										<%= link_to edit_admin_post_path(post), class: "btn btn-sm btn-outline-warning m-1" do %>
											<i class="fa-solid fa-pencil"></i> Editar
										<% end %>

										<%= link_to admin_post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger m-1" do %>
											<i class="fa-solid fa-trash"></i> Deletar
										<% end %>
									</div>

								</div>
							<% end %>
						</div>

					</div>
				</div>
			</div>
